           <form action="/candidatecreate" method="POST">
            <div class="row">
 
                <div class="col-sm-1">
                    <br>Candidate Name 
                </div>
 
                <div class="col-sm-4">
                     <input type="text" placeholder="Enter your name" name="username"  required /> 
                 </div>
 
                <div class="col-sm-1">
                    <br>Candidate ID  
                </div>
 
                <div class="col-sm-3">
                     <input type="text" placeholder="Enter your voter id" name="id" required /> 
                 </div>
 
            </div>


            <div class="row">
 
                <div class="col-sm-1">
                    <br>Party
                </div>
 
                <div class="col-sm-4">
                    <input type="text" placeholder="Enter your party name" name="party" required />
                 </div>
 
                <div class="col-sm-1">
                    <br>Sign 
                </div>
 
               <!-- <div class="col-sm-3">
                   <br>  <input type="file" name="file" required /> 
